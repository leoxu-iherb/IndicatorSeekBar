<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.warkiz.indicatorseekbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/subtitle_text_style"
            android:text="5. ticks_count=6, indicator_stay" />

        <com.warkiz.widget.IndicatorStayLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/seek_bar"
                app:isb_outer_margin_width="32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:isb_indicator_color="#666666"
                app:isb_indicator_text_size="12sp"
                app:isb_max="10"
                app:isb_progress="-1"
                app:isb_selected_tick_marks_color="#458500"
                app:isb_show_tick_marks_type="round_square"
                app:isb_thumb_color="#458500"
                app:isb_no_indicator_no_thumb="true"
                app:isb_thumb_size="24dp"
                app:isb_tick_marks_size="4dp"
                app:isb_tick_marks_size_height_high="16dp"
                app:isb_tick_marks_size_height_low="12dp"
                app:isb_ticks_count="11"
                app:isb_track_background_color="#cccccc"
                app:isb_track_background_size="4dp"
                app:isb_track_progress_color="#458500"
                app:isb_track_progress_size="4dp"
                app:isb_unselected_tick_marks_color="#cccccc" />
        </com.warkiz.widget.IndicatorStayLayout>

    </LinearLayout>

</ScrollView>
